<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Define the form view -->

        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.custom</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="priority" eval="5"/>
            <field name="arch" type="xml">
                <xpath expr="//form" position="inside">
                    <app data-string="ZRA" string="ZRA" name="zra_fetch_data" groups="base.group_user" icon="fa-cog">
                        <block title="ZRA">
                            <setting help="ZRA fetching of classifications and class codes for smart invoice">
                                <div class="o_setting_container">
                                    <h2>Custom Data Fetching</h2>
                                    <div class="app_settings_block" data-key="custom_data_fetching">
                                        <group>
                                            <button name="fetch_data" string="Fetch Data" type="object"
                                                    class="btn-primary"/>
                                        </group>
                                    </div>
                                </div>
                            </setting>
                        </block>
                    </app>
                </xpath>
            </field>
        </record>


