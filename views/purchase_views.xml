<odoo>
    <data>
        <!-- Original Form View -->
        <record id="view_purchase_data_form" model="ir.ui.view">
            <field name="name">purchase.data.form</field>
            <field name="model">purchase.data</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="confirm_invoice" type="object" string="Confirm Invoice" class="oe_highlight"/>
                    </header>
                    <sheet>
                        <group>
                            <field name="spplr_tpin"/>
                            <field name="spplr_nm"/>
                            <field name="spplr_bhf_id"/>
                            <field name="spplr_invc_no" options="{'no_create': True, 'no_open': True}"/>
                            <field name="rcpt_ty_cd"/>
                            <field name="pmt_ty_cd"/>
                            <field name="cfm_dt"/>
                            <field name="sales_dt"/>
                            <field name="stock_rls_dt"/>
                            <field name="tot_item_cnt"/>
                            <field name="tot_taxbl_amt"/>
                            <field name="tot_tax_amt"/>
                            <field name="tot_amt"/>
                            <field name="remark"/>
                            <field name="fetched"/>
                        </group>
                        <notebook>
                            <page string="Items">
                                <field name="item_list">
                                    <tree editable="bottom">
                                        <field name="item_seq"/>
                                        <field name="item_cd"/>
                                        <field name="item_nm"/>
                                        <field name="qty"/>
                                        <field name="prc"/>
                                        <field name="tot_amt"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Simplified Form View -->
        <record id="view_purchase_data_simple_form" model="ir.ui.view">
            <field name="name">purchase.data.simple.form</field>
            <field name="model">purchase.data</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="fetch_purchase_data" type="object" string="Fetch Data" class="oe_highlight"/>
                    </header>
                    <sheet>
                        <group>
                            <field name="fetch_selection"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Tree View -->
        <record id="view_purchase_data_tree" model="ir.ui.view">
            <field name="name">purchase.data.tree</field>
            <field name="model">purchase.data</field>
            <field name="arch" type="xml">
                <tree create="Create Purchase Data">
                    <field name="spplr_tpin"/>
                    <field name="spplr_nm"/>
                    <field name="spplr_invc_no"/>
                    <field name="tot_amt"/>
                    <field name="fetched"/>
                </tree>
            </field>
        </record>

        <!-- Action for Original Form View -->
        <record id="action_purchase_data" model="ir.actions.act_window">
            <field name="name">Purchase Data</field>
            <field name="res_model">purchase.data</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_purchase_data_tree"/>
        </record>

        <!-- Action for Simplified Form View -->
        <record id="action_purchase_data_simple" model="ir.actions.act_window">
            <field name="name">Purchase Data Simple</field>
            <field name="res_model">purchase.data</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_purchase_data_simple_form"/>
        </record>

        <!-- Parent Menu Item -->
        <menuitem id="menu_select_si_purchase" name="Select SI Purchase" parent="stock.menu_stock_root"/>

        <!-- Sub Menu Item for Detailed Form -->
        <menuitem id="menu_select_si_purchase_detailed" name="Detailed Form" parent="menu_select_si_purchase"
                  action="action_purchase_data"/>

        <!-- Sub Menu Item for Simplified Form -->
        <menuitem id="menu_select_si_purchase_simple" name="Simplified Form" parent="menu_select_si_purchase"
                  action="action_purchase_data_simple"/>
    </data>
</odoo>
